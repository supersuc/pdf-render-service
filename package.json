{
  "name": "pdf-render-service",
  "version": "2.0.0",
  "description": "企业级 HTML 转 PDF 服务",
  "main": "app.js",
  "scripts": {
    "start": "pm2 start pm2.config.js --env production",
    "restart": "pm2 restart all",
    "stop": "pm2 stop all",
    "delete": "pm2 delete all",
    "logs": "pm2 logs",
    "dev": "nodemon app.js",
    "worker": "node workers/pdf-worker.js",
    "worker:dev": "nodemon workers/pdf-worker.js",
    "test": "node test/test-api.js",
    "test:queue": "node test/test-queue.js"
  },
  "keywords": [
    "pdf",
    "html-to-pdf",
    "puppeteer",
    "express"
  ],
  "author": "suchao",
  "license": "MIT",
  "dependencies": {
    "bull": "^4.12.0",
    "cors": "^2.8.5",
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "ioredis": "^5.3.2",
    "morgan": "^1.10.0",
    "puppeteer": "^21.6.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "axios": "^1.13.2",
    "nodemon": "^3.0.2",
    "pm2": "^5.3.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
